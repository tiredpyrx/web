{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ES6",
      "paths": {
        "@/*": ["./src/*"]
      }
    }
  },
  "typeAcquisition": {
   "include": ["src/types/global.d.ts"] 
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/app/(marketing)/layout.tsx",
    "scripts/seed.js"
, "scripts/seed.ts", "src/app/(web)/editor/page.jsx"  ],
  "exclude": ["node_modules"]
}
